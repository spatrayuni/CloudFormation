{
"AWSTemplateFormatVersion": "2010-09-09",
"Resources": {
  "BaseInstanceProfile": {
    "Type": "AWS::IAM::InstanceProfile",
    "Properties": {
      "Path": "/",
      "Roles": [
        {
          "Ref": "BaseInstanceRole"
        }
      ]
    }
  },
  "BaseInstanceRole": {
    "Type": "AWS::IAM::Role",
    "Properties": {
      "AssumeRolePolicyDocument": {
        "Statement": [
          {
            "Action": [
              "sts:AssumeRole"
            ],
            "Effect": "Allow",
            "Principal": {
              "Service": [
                "ec2.amazonaws.com"
              ]
            }
          }
        ],
        "Version": "2012-10-17"
      },
      "Path": "/"
    }
  },
  "RolePolicies": {
    "Type": "AWS::IAM::Policy",
    "Properties": {
      "PolicyName": "root",
      "PolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
          }
        ]
      },
      "Roles": [
        { "Ref" : "BaseInstanceRole" }
      ]
    }
  },
   "MyInstance": {
     "Type": "AWS::EC2::Instance",
     "Metadata" : {
      "AWS::CloudFormation::Init" : {
        "config" : {
          "packages" : {
            "yum"   : {
              "httpd" : []
            }
          }
        }
      }
    },
     "Properties": {
       "ImageId": "ami-6f46da0f",
       "InstanceType": "t2.micro",
       "KeyName": "intuit_learning",
       "SecurityGroupIds": ["sg-8c8804f6","sg-7f8a0605","sg-e189059b"],
       "SubnetId": "subnet-38261971",
       "IamInstanceProfile": { "Ref" : "BaseInstanceProfile"},
       "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
         "#!/bin/bash -xe\n",
         "# Signal the status from cfn-init\n",
         "cfn-init -v ",
         "         --stack ", { "Ref" : "AWS::StackName" },
         "         --resource MyInstance",
         "         --region ", { "Ref" : "AWS::Region" }, "\n",
         "for i in {1..15}; do sleep 60s; done\n",
         "  cfn-signal -e 0 ",
         "         --stack ", { "Ref" : "AWS::StackName" },
         "         --resource MyInstance ",
         "         --region ", { "Ref" : "AWS::Region" },
         "\n"
       ]]}},
       "Tags": [
         {
           "Key": "Name",
           "Value": "My_Instance"
         }
       ]
     },
     "CreationPolicy" : {
        "ResourceSignal" : {
          "Timeout" : "PT18M"
        }
      }
  } 
   }
}

